#!/bin/bash

BYTES=($(echo $IN_VPC_CIDR_BASE | tr "." "\n"))

IN_SUBNET_CIDR_BLOCK_0=${BYTES[0]}.${BYTES[1]}.$((${BYTES[2]}+0)).0/24
IN_SUBNET_CIDR_BLOCK_1=${BYTES[0]}.${BYTES[1]}.$((${BYTES[2]}+1)).0/24
IN_SUBNET_CIDR_BLOCK_2=${BYTES[0]}.${BYTES[1]}.$((${BYTES[2]}+2)).0/24
IN_SUBNET_CIDR_BLOCK_3=${BYTES[0]}.${BYTES[1]}.$((${BYTES[2]}+3)).0/24

echo $IN_SUBNET_CIDR_BLOCK_0,$IN_SUBNET_CIDR_BLOCK_1,$IN_SUBNET_CIDR_BLOCK_2,$IN_SUBNET_CIDR_BLOCK_3

exit 0
